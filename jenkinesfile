pipeline {
    agent {
        docker {
            image 'node:18'
            args '-p 3000:3000'
        }
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build App') {
            steps {
                sh 'npm pack'
            }
            post {
                success {
                    archiveArtifacts artifacts: '*.tgz', fingerprint: true
                }
            }
        }
    }

    post {
        success { echo "Build Success!" }
        failure { echo "Build Failed!" }
    }
}
